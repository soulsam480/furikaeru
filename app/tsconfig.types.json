{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "src/*": ["src/*"]
    },
    "types": ["vite-plugin-pwa/client"],
    "emitDeclarationOnly": true,
    "declarationDir": "types"
  },
  "exclude": ["node_modules"],
  "include": ["src/components/lib/*"]
}
